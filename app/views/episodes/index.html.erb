<% if @episodes.empty? %>
<p>Nothing to see here. Move a long.</p>
<% else; episode = @episodes.shift(1).first %>
<a class="video hero" href="<%= url_for episode %>">
  <img src="<%= episode.poster_url %>" alt="Episode #<%= episode.position %> - <%= episode.title %>" />
  <span class="title">Episode #<%= episode.position %></span>
  <span class="subtitle"><%= episode.title %></span>
  <span class="background"></span>
</a>

<h2 class="previous">Previous Episodes</h2>

<ul class="episodes">
<% @episodes.each do |episode| %>
  <li>
    <a class="video" href="<%= url_for episode %>">
      <img src="<%= episode.poster_url %>" alt="Episode #<%= episode.position %> - <%= episode.title %>" />
      <span class="title">Episode #<%= episode.position %></span>
      <span class="subtitle"><%= episode.title %></span>
      <span class="background"></span>
    </a>
  </li>
<% end %>
</ul>
<% end %>
